<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FeedRow" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">16sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:background">@drawable/chirp</item>
    </style>

    <style name="Chirp" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
